extends layout



block content 
    h1 Item: #{title}

    h3 Description:
    p #{item.description}

    p price: $#{item.price} 
    p portion: #{item.portion}
    p Quantity in stock: #{item.quantity}
    p id #{item._id}
    
    hr
    p
      a(href=item.url+'/delete') Delete Item
    p
      a(href=item.url+'/update') Update Item