extends layout

block content
  h1 #{produce_type.name}
  
  if items.length
  
    p #[strong Delete the following items before attempting to delete this Produce Type.]
  
    div(style='margin-left:20px;margin-top:20px')

      h4 Items
    
      dl
      each item in items
          dt 
          a(href=item.url) #{item.name}
          dd #{item.description}

  else
    p Do you really want to delete this Produce Type?
    
    form(method='POST' action='')
      div.form-group
        input#produce_type_id.form-control(type='hidden',name='producetypeid', required='true',
         value=produce_type._id )

      button.btn.btn-primary(type='submit') Delete