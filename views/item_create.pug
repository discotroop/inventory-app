extends layout

block content
  h1=title
  form(method='POST' action='')
    div.form-group
      label(for='name') Item name:
      input#name.form-control(type='text' placeholder=(item===undefined ? 'Name of Item' : item.name) name='name' required='true' value=(undefined===item ? '' : item.name) )
    div.form-group
      label(for='description') Description:
      input#description.form-control(type='text' name='description' value=(undefined===item ? '' : item.description) )
    div.form-group
      label(for="producetype") Produce Type:
      select#producetype.form-control(type="select", placeholder="", name='producetype' required="false")  //-     for producetype in producetypes
          if item
            option(value=item._id selected=(item.type[0].toString()==item.type._id.toString() ? 'selected' : false)) #{item.name}
          else
            for produce in producetypes
             option(value=produce._id) #{produce.name}
    button.btn.btn-primary(type='submit') Submit
  if errors 
    ul
      for error in errors
        li!= error.msg